<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.NestedScrollView xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:fillViewport="true">

    <android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/darkGrey"
        android:theme="@style/Emotionally">


        <android.support.v7.widget.Toolbar
            android:id="@+id/header"
            android:layout_width="412dp"
            android:layout_height="51dp"
            android:background="@color/lightBlack"
            android:minHeight="?attr/actionBarSize"
            android:theme="?attr/actionBarTheme"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="1.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.0" />

        <TextView
            android:id="@+id/options_header"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="8dp"
            android:layout_marginEnd="8dp"
            android:layout_marginStart="8dp"
            android:layout_marginTop="8dp"
            android:text="OPTIONS"
            android:textColor="@color/notBlindingWhite"
            android:textSize="22sp"
            app:layout_constraintBottom_toBottomOf="@+id/header"
            app:layout_constraintEnd_toEndOf="@+id/header"
            app:layout_constraintHorizontal_bias="0.073"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="@+id/header" />

        <TextView
            android:id="@+id/keyboard_text"
            android:layout_width="wrap_content"
            android:layout_height="23dp"
            android:layout_marginBottom="8dp"
            android:layout_marginEnd="8dp"
            android:layout_marginStart="8dp"
            android:text="KEYBOARD"
            android:textColor="@color/notBlindingWhite"
            android:textSize="18sp"
            android:textStyle="bold"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.072"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/header"
            app:layout_constraintVertical_bias="0.081" />

        <TextView
            android:id="@+id/vibration_duration_text"
            android:layout_width="wrap_content"
            android:layout_height="23dp"
            android:layout_marginEnd="8dp"
            android:layout_marginStart="8dp"
            android:layout_marginTop="16dp"
            android:text="Vibration Duration"
            android:textColor="@color/notBlindingWhite"
            android:textSize="16sp"
            app:layout_constraintEnd_toEndOf="@+id/keyboard_text"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="@+id/keyboard_text"
            app:layout_constraintTop_toBottomOf="@+id/predictive_text_text" />

        <TextView
            android:id="@+id/long_press_delay_text"
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:layout_marginEnd="8dp"
            android:layout_marginStart="8dp"
            android:layout_marginTop="16dp"
            android:text="Long Press Delay"
            android:textColor="@color/notBlindingWhite"
            android:textSize="16sp"
            app:layout_constraintEnd_toEndOf="@+id/keyboard_text"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="@+id/keyboard_text"
            app:layout_constraintTop_toBottomOf="@+id/predictive_text_seekbar" />

        <SeekBar
            android:id="@+id/predictive_text_seekbar"
            android:layout_width="300dp"
            android:layout_height="22dp"
            android:layout_marginEnd="8dp"
            android:layout_marginStart="8dp"
            android:layout_marginTop="16dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/vibration_duration_text" />

        <SeekBar
            android:id="@+id/long_press_delay_seekbar"
            android:layout_width="300dp"
            android:layout_height="22dp"
            android:layout_marginEnd="8dp"
            android:layout_marginStart="8dp"
            android:layout_marginTop="16dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/long_press_delay_text" />

        <TextView
            android:id="@+id/predictive_text_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="8dp"
            android:layout_marginStart="8dp"
            android:layout_marginTop="24dp"
            android:text="Predictive Text"
            android:textColor="@color/notBlindingWhite"
            android:textSize="16sp"
            app:layout_constraintEnd_toEndOf="@+id/keyboard_text"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="@+id/keyboard_text"
            app:layout_constraintTop_toBottomOf="@+id/keyboard_text" />

        <TextView
            android:id="@+id/pop_up_keypress_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="8dp"
            android:layout_marginStart="8dp"
            android:layout_marginTop="16dp"
            android:text="Pop-Up Keypress"
            android:textColor="@color/notBlindingWhite"
            android:textSize="16sp"
            app:layout_constraintEnd_toEndOf="@+id/keyboard_text"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="@+id/keyboard_text"
            app:layout_constraintTop_toBottomOf="@+id/long_press_delay_seekbar" />

        <TextView
            android:id="@+id/number_row_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="8dp"
            android:layout_marginStart="8dp"
            android:layout_marginTop="16dp"
            android:text="Number Row"
            android:textColor="@color/notBlindingWhite"
            android:textSize="16sp"
            app:layout_constraintEnd_toEndOf="@+id/keyboard_text"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="@+id/keyboard_text"
            app:layout_constraintTop_toBottomOf="@+id/pop_up_keypress_text" />

        <TextView
            android:id="@+id/keyboard_size_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="8dp"
            android:layout_marginStart="8dp"
            android:layout_marginTop="16dp"
            android:text="Keyboard Size"
            android:textColor="@color/notBlindingWhite"
            android:textSize="16sp"
            app:layout_constraintEnd_toEndOf="@+id/keyboard_text"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="@+id/keyboard_text"
            app:layout_constraintTop_toBottomOf="@+id/number_row_text" />

        <TextView
            android:id="@+id/analysis_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="8dp"
            android:layout_marginStart="8dp"
            android:layout_marginTop="416dp"
            android:text="ANALYSIS"
            android:textColor="@color/notBlindingWhite"
            android:textSize="18sp"
            android:textStyle="bold"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.07"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/header" />

        <TextView
            android:id="@+id/cellular_data_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="8dp"
            android:layout_marginStart="8dp"
            android:layout_marginTop="16dp"
            android:text="Cellular Data"
            android:textColor="@color/notBlindingWhite"
            android:textSize="16sp"
            app:layout_constraintEnd_toEndOf="@+id/analysis_text"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="@+id/analysis_text"
            app:layout_constraintTop_toBottomOf="@+id/analysis_text" />

        <TextView
            android:id="@+id/technique_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="8dp"
            android:layout_marginStart="8dp"
            android:layout_marginTop="16dp"
            android:text="Technique"
            android:textColor="@color/notBlindingWhite"
            android:textSize="16sp"
            app:layout_constraintEnd_toEndOf="@+id/analysis_text"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="@+id/analysis_text"
            app:layout_constraintTop_toBottomOf="@+id/cellular_data_text" />

        <CheckBox
            android:id="@+id/predictive_text_checkbox"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="181dp"
            android:buttonTint="@color/darkNeonGreen"
            app:layout_constraintBaseline_toBaselineOf="@+id/predictive_text_text"
            app:layout_constraintStart_toEndOf="@+id/predictive_text_text" />

        <CheckBox
            android:id="@+id/pop_up_keypress_checkbox"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="164dp"
            android:buttonTint="@color/darkNeonGreen"
            app:layout_constraintBaseline_toBaselineOf="@+id/pop_up_keypress_text"
            app:layout_constraintStart_toEndOf="@+id/pop_up_keypress_text" />

        <CheckBox
            android:id="@+id/number_row_checkbox"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="194dp"
            android:buttonTint="@color/darkNeonGreen"
            app:layout_constraintBaseline_toBaselineOf="@+id/number_row_text"
            app:layout_constraintStart_toEndOf="@+id/number_row_text" />

        <CheckBox
            android:id="@+id/keyboard_size_checkbox"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="185dp"
            android:buttonTint="@color/darkNeonGreen"
            app:layout_constraintBaseline_toBaselineOf="@+id/keyboard_size_text"
            app:layout_constraintStart_toEndOf="@+id/keyboard_size_text" />

        <CheckBox
            android:id="@+id/cellular_data_checkbox"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="196dp"
            android:buttonTint="@color/darkNeonGreen"
            app:layout_constraintBaseline_toBaselineOf="@+id/cellular_data_text"
            app:layout_constraintStart_toEndOf="@+id/cellular_data_text" />

        <CheckBox
            android:id="@+id/technique_checkbox"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="212dp"
            android:buttonTint="@color/darkNeonGreen"
            app:layout_constraintBaseline_toBaselineOf="@+id/technique_text"
            app:layout_constraintStart_toEndOf="@+id/technique_text" />

    </android.support.constraint.ConstraintLayout>

</android.support.v4.widget.NestedScrollView>